<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/authorsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        android:text="App Authors:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="52dp"
        android:text="@string/authors"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/authorsLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apiCreditsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="432dp"
        android:autoLink="web"
        android:text="@string/api_link"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/apiCreditsLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apiCreditsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="356dp"
        android:text="API Credits:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorsLabel" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="255dp"
        android:layout_height="204dp"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="20dp"
        android:text="Erasmus students at ISEL.\nThis application is part of a project for the Mobile Development course from LEIC.\n\nA reference to the API used (Board Game Atlas) can be found below."
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorsTv" />

</androidx.constraintlayout.widget.ConstraintLayout>