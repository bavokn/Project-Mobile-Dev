<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isel.bgg_1.CustomGameListsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featureSetsRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customGameListTxt" />

    <Button
        android:id="@+id/addFeatureSetButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Add List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customGameListTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/customGameListTxt"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Custom list name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
